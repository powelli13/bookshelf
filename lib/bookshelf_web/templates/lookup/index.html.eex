<%= form_for @conn,
    Routes.lookup_path(@conn, :lookup_book),
    fn f -> %>
  <div>
    <%= select f, :query_type, ["Title", "ISBN"] %>
    <%= text_input f, :query, placeholder: "Search term" %>
  </div>
  <%= submit "Lookup Title" %>
<% end %>

<div>Found Book:</div>
<div class="book-card">
  <div>Title: <%= Map.get(assigns[:value], "title", "") %></div>
  <div>Author: <%= Map.get(assigns[:value], "author", "") %></div>
  <div>Description: <%= Map.get(assigns[:value], "description", "") %></div>
</div>
