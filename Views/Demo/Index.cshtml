@{
    ViewData["Title"] = "Demo";
}
@model IEnumerable<BookModel>

@if (Model != null)
{
    @foreach (var book in Model)
    {
        <div>
            Title: @book.Title
        </div>
        <div>
            Author: @book.Author
        </div>
        <div>
            Published: @book.YearPublished
        </div>
    }
}
else
{
    <div>No book data to display.</div>
}

<form action="/demo/createbook" method="post">
    <label for="title">Title</label>
    <input type="text" name="title" />
    
    <label for="author">Author</label>
    <input type="text" name="author" />

    <!--<label for="published">Publish Date</label>
    <input type="date" name="published" />-->

    <button type="submit">
        Create Book
    </button>
</form>
